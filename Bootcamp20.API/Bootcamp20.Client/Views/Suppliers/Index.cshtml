
@{
    ViewBag.Title = "Index";
}

<h2 style="font-family:'Futura Md BT'">Index</h2>

<div class="container">
    <hr />
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="" style="font-family:'Futura Md BT'">Create New</button><br /><br />
    @*<input type="submit" value="search" class="button" onclick="LoadIndexSearch();">
            <input type="text" id="search" placeholder="search" value="">*@
    <table class="table table-bordered compact hover" id="datatables">
        <thead style="font-style:italic; font-family:'Futura Md BT';">
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody class="tbody" style="font-family:'Futura Md BT'"></tbody>
    </table>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dissmiss="modal">x</button>
                <h4 class="modal-title" id="myModalLabel" style="font-family:'Futura Md BT'">Supplier Form</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="Id" style="font-family:'Futura Md BT'">Id</label>
                        <input type="text" class="form-control" id="Id" placeholder="Id" disabled="disabled" style="font-family:'Futura Md BT'" />
                    </div>
                    <div class="form-group">
                        <label for="Name" style="font-family:'Futura Md BT'">Name</label>
                        <input type="text" class="form-control" id="Name" placeholder="Name " style="font-family:'Futura Md BT'" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="Save" style="font-family:'Futura Md BT'" onclick="Save();">Add</button>
                <button type="button" class="btn btn-primary" id="Update" style="display:none; font-family:'Futura Md BT'"  onclick="Edit();">Update</button>
                <button type="button" class="btn btn-default" style="font-family:'Futura Md BT'" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
<script src="~/Content/sweetalert/sweetalert.min.js"></script>
<link href="~/Content/sweetalert/sweetalert.css" rel="stylesheet" />
<script src="~/Scripts/SupplierMaster/RetrievingSupplier.js"></script>
<link href="~/Content/datatables/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Content/datatables/jquery.dataTables.min.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
    }